generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KudoCard_boards {
  id         Int    @id @default(autoincrement())
  title      String
  imgSrc     String
  category   String
  author     String
  boardCards Card[]
}

model Card {
  id         Int    @id @default(autoincrement())
  cardTitle  String
  cardAuthor String
  cardImg    String
  cardInfo   String

  KudoCard_boards   KudoCard_boards? @relation(fields: [kudoCard_boardsId], references: [id])
  
  kudoCard_boardsId Int?
}
